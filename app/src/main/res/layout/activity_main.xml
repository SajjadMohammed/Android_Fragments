<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <include layout="@layout/support_toolbar"/>

   <Button
       android:id="@+id/showFragmentOne"
       android:text="showFragmentOne"
       android:onClick="showFragmentOne"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <Button
       android:id="@+id/showFragmentTow"
       android:text="showFragmentTow"
       android:onClick="showFragmentTow"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <FrameLayout
       android:id="@+id/fragmentContainer"
       android:layout_width="match_parent"
       android:layout_height="match_parent" />

</LinearLayout>